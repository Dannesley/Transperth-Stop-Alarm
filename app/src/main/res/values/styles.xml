<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/BusActionBarStyle</item>
        <item name="actionBarStyle">@style/BusActionBarStyle</item>
        <item name="android:actionButtonStyle">@style/BusActionButtonStyle</item>
        <item name="actionButtonStyle">@style/BusActionButtonStyle</item>
    </style>

    <style name="BusActionBarStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/actionbar_background</item>
